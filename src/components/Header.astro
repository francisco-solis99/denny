    </nav>
    <a href="/" class="inline-flex w-28 md:w-36 md:-mt-11 justify-self-center">
      <img src="/logo.svg" alt="Dulcerias Denny Logo" class="w-full h-full object-cover"/>
    </a>
    <div class="justify-self-end">
      <button class="py-2 px-3 rounded-3xl text-sm font-semibold bg-denny-blue-100 text-white">
        Contactanos
      </button>
    </div>
  </div>
</header>

<style>
  .nav__submenu-toggle {
    transform: scale(1);
    height: auto;
  }

  .nav__submenu-toggle h3 {
    margin: 0.75rem 0;
  }

  .overlay__toggle {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.75);
    z-index: 5;
  }

  .outline__text {
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 1px;
  }
</style>

<script>

  const navMenu = document.querySelector('#nav-menu');
  const menuNavBtn = document.querySelector('#btn-menu');
  const btnSubmenu = document.querySelector('#btn-submenu');
  const subMenu = document.querySelector('#submenu');
  const overlay = document.querySelector('#overlay');

  menuNavBtn.addEventListener('click', () => {
    navMenu.classList.toggle('top-[100%]')
    subMenu.classList.remove('nav__submenu-toggle');
    overlay.classList.toggle('overlay__toggle');
  })

  btnSubmenu.addEventListener('click', () => {
    subMenu.classList.toggle('nav__submenu-toggle');
  })
</script>
