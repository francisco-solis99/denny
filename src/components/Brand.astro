---
  interface Props {
    name: string,
    imgSrc: string,
    nameVisible?: boolean
  };

  const {name, imgSrc, nameVisible = true} = Astro.props;
---

<a href="#" class="group inline-grid">
  <figure class="inline-block max-w-max">
    <img src={imgSrc} alt={`Marca - ${name}`} class="w-full object-cover">
    {
      nameVisible && <h3><figcaption class="text-center mt-2 text-denny-dark-400 text-sm transition-all delay-75 group-hover:text-denny-red-200 group-hover:font-black">{name}</figcaption></h3>
    }
  </figure>
</a>
