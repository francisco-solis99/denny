---
	import FullLayout from "@layouts/FullLayout.astro";

  const titlePage = 'Error 404 | Dulcerías Denny';
---


<FullLayout titlePage={titlePage}>
  <main class="w-full h-screen grid place-content-center bg-gradient-to-br from-denny-blue-200 to-denny-blue-400 text-white">
    <hgroup class="text-center">
      <h1 class="text-5xl font-black mb-2">Error 404</h1>
      <p class="text-lg">Lo sentimos, no hemos encontrado la página que buscas.</p>
    </hgroup>
    <picture>
      <img src="/images/error404.png" alt="Error 404">
    </picture>
    <div class="flex justify-center mt-8">
      <a href="/" class="py-2 px-3 bg-denny-pink text-white rounded-3xl min-w-[200px] inline-flex justify-center">Regresar</a>
    </div>
  </main>
</FullLayout>
